<h2>Reset Password</h2>

<% if (typeof error !== 'undefined' && error) { %>
  <h3 style="color:red;"><%= error %></h3>
<% } %>

<form action="/reset-password?token=<%= resetData?.token %>" method="post">
  <!-- Keep user_id so backend knows which user -->
  <input type="hidden" name="user_id" value="<%= resetData?.user_id %>" />

  <!-- New password -->
  <input
    type="password"
    name="new_password"
    id="new_password"
    placeholder="New Password"
    required
  />

  <!-- Confirm password -->
  <input
    type="password"
    name="confirm_new_password"
    id="confirm_new_password"
    placeholder="Confirm Password"
    required
  />

  <input type="submit" value="Submit" />
</form>
